<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PI3ES2024T2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_primary</item>
        <item name="colorPrimaryVariant">@color/azul_statusbar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_primary</item>
        <item name="colorSecondaryVariant">@color/azul_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="textview">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="containedbutton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/azul_primary</item>
    </style>

    <style name="outlinedbutton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/azul_primary</item>
        <item name="strokeColor">@color/azul_primary</item>
    </style>

    <style name="textbutton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/azul_primary</item>
    </style>

    <style name="imageview_logo">
        <item name="android:background">@drawable/logomarca</item>
    </style>

    <style name="btn_arrow_back">
        <item name="android:background">@drawable/selector_btn_arrow_back_lightmode</item>
    </style>

    <style name="textfield" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="radiobutton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="floatingactionbutton">
        <item name="android:backgroundTint">@color/azul_primary</item>
        <item name="android:textColor">@color/white_high_emphasis</item>
    </style>

    <style name="materialdivider">
        <item name="dividerColor">@color/cinza_escuro</item>
    </style>

    <style name="bottomsheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@drawable/shape_sheet_bottom</item>
    </style>

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="warningIcon">
        <item name="android:tint">@color/azul_primary</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonFechar</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonIrParaMapa</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialogSairApp"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonNegative</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonAffirmative</item>
    </style>

</resources>