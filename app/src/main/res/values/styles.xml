<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_template">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="edit_text_template">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/edt_background</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="edit_text_template1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">40dp</item>
    </style>

    <style name="ButtonFechar" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/azul_primary</item>
        <item name="icon">@drawable/icon_close_24</item>
        <item name="iconTint">@color/azul_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonFecharDark" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/icon_close_24</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonIrParaMapa"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/azul_primary</item>
        <item name="icon">@drawable/icon_location_on_24</item>
        <item name="iconTint">@color/azul_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonIrParaMapaDark"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/icon_location_on_24</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonAffirmative"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/azul_secondary</item>
        <item name="icon">@drawable/icon_check_24</item>
        <item name="iconTint">@color/azul_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonAffirmativeDark"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/icon_check_24</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonNegative"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/azul_secondary</item>
        <item name="icon">@drawable/icon_cancel_24</item>
        <item name="iconTint">@color/azul_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonNegativeDark"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/icon_cancel_24</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/red_error</item>
    </style>

</resources>