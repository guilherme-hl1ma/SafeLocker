<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gerente.RentalReleasedConfirmationActivity">

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="129dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_check_circle_24"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locação Liberada"
        android:textStyle="bold"
        android:textSize="24sp"
        style="@style/textview"
        app:layout_constraintTop_toBottomOf="@id/ivCheck"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="Informe ao cliente qual armário foi alugado e a porta do armário."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleArmario"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Armário Alugado:"
        android:textStyle="bold"
        android:textSize="16sp"
        style="@style/textview"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvArmario"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toEndOf="@id/tvTitleArmario"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Armário x"
        android:textSize="16sp"
        style="@style/textview"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="30dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitlePorta"
        app:layout_constraintTop_toBottomOf="@id/tvTitleArmario"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porta do Armário:"
        android:textStyle="bold"
        android:textSize="16sp"
        style="@style/textview"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPorta"
        app:layout_constraintTop_toBottomOf="@id/tvTitleArmario"
        app:layout_constraintStart_toEndOf="@id/tvTitlePorta"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Porta n"
        android:textSize="16sp"
        style="@style/textview"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btnGoToHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPorta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:text="Início"
        style="@style/containedbutton"
    />

</androidx.constraintlayout.widget.ConstraintLayout>